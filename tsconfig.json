{
  "compilerOptions": {
    "target": "ES2021",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": "./src",
    "module": "ES2022",
    "moduleResolution": "node",
    "paths": {
      "@database": ["database"],
      "@database/*": ["database/*"],
      "@modules": ["modules"],
      "@modules/*": ["modules/*"],
      "@lib": ["lib"],
      "@lib/*": ["lib/*"],
      "@helpers": ["helpers"],
      "@helpers/*": ["helpers/*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"]
    },
    "types": ["bun-types"],
    "strict": true,
    "allowSyntheticDefaultImports": true
  }
}
